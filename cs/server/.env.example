# Ocean Plastic Forecast Environment Configuration

# Application
APP_NAME="Ocean Plastic Forecast API"
APP_VERSION="1.0.0"
DEBUG=false

# Database
DATABASE_URL=postgresql://ocean_user:ocean_password@localhost:5432/ocean_forecast
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Security
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Monitoring
METRICS_PORT=8001
LOG_LEVEL=INFO

# Task Management
MAX_TASKS_PER_CLIENT=5
TASK_TIMEOUT_MINUTES=30
MAX_RETRY_COUNT=3

# External Data Sources
NOAA_API_KEY=your-noaa-api-key-here
COPERNICUS_USERNAME=your-copernicus-username
COPERNICUS_PASSWORD=your-copernicus-password

# Docker
DOCKER_IMAGE_PREFIX=ocean-forecast
