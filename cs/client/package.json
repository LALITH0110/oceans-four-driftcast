{
  "name": "ocean-plastic-forecast-client",
  "version": "1.0.0",
  "description": "Volunteer client for Ocean Plastic Drift Forecasting",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "test": "jest",
    "lint": "eslint src/",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "ocean",
    "plastic",
    "forecasting",
    "distributed-computing",
    "volunteer-computing"
  ],
  "author": "Ocean Plastic Forecast Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "ws": "^8.14.2",
    "node-cron": "^3.0.2",
    "electron-store": "^8.1.0",
    "electron-log": "^4.4.8",
    "systeminformation": "^5.21.7"
  },
  "build": {
    "appId": "com.oceanforecast.client",
    "productName": "Ocean Plastic Forecast Client",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.education"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
