# Ocean Forecast Production Environment Configuration
# Copy this file to .env and fill in the values

# ===============================
# Database Configuration
# ===============================
POSTGRES_DB=ocean_forecast
POSTGRES_USER=ocean_user
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# ===============================
# API Security
# ===============================
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_32_CHAR_STRING

# Debug mode (MUST be false in production)
DEBUG=false

# Logging level (INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ===============================
# Server Configuration
# ===============================
# Your IIT cloud server domain
SERVER_HOST=system80.rice.iit.edu

# ===============================
# Monitoring & Admin
# ===============================
# Grafana admin password
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# ===============================
# Optional: Advanced Configuration
# ===============================
# Database connection pool size (default: 5)
# DB_POOL_SIZE=5

# Task queue settings
# CELERY_WORKER_CONCURRENCY=4

# API rate limiting (requests per second)
# RATE_LIMIT_PER_SECOND=10
